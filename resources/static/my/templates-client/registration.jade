
.row
	.span6.offset3

		.row
			.span6.center
				img( src="img/ownet.png" )

		.row
			.span6
				form(name="registration-form").form-horizontal

					.control-group
						label.control-label Login:
						.controls
							input(type="text",name="login")
							span.help-block

					.control-group
						label.control-label Password:
						.controls
							input(type="password",name="password")
							span.help-block

					.control-group
						label.control-label Name:
						.controls
							input(type="text",name="first_name")
							span.help-block

					.control-group
						label.control-label Last Name:
						.controls
							input(type="text",name="last_name")
							span.help-block

					.control-group
						label.control-label Email:
						.controls
							input(type="text",name="email")
							span.help-block
					.control-group
						label.control-label Gender:
						.controls
							input(type="text",name="gender")
							span.help-block
					.control-group
						label.control-label Birthday:
						.controls
							input(type="date",name="date_of_birth")
							span.help-block

					.control-group
						.controls
							button.btn.btn-info(type="button",name="submit") Sign Up


