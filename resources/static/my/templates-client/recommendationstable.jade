each activity in activities
	.row
		.span2
			- var array = activity.content
			- var content = array.split(";")
			a( href="http://#{content[0]}",name="recommendation" ) #{content[1]}
		.span2
			span(title="#{content[2]}") #{content[2].substr(0,15)}...
		.span2
			a( href="#/profile",data-id="#{activity.user_id}",name="showOtherUser") #{activity.user_name}
		.span2
			span #{new Date(activity.date_created).toLocaleDateString()}
		.span1
		if (user.id == activity.user_id)
			.delete
				img.icon( src="img/no.png" , data-filter="user",href="#/recommendations",data-id="#{activity.object_id}",name="deleteRecommendation", title="Delete") 
		.name
			label.orange
				a( href="#/otherprofile",data-id="#{activity.user_id}",name="showOtherUser" ) #{activity.user_name}
			label recommended: 
				a( href="http://#{content[0]}",name="recommendation", target="_blank" ) #{content[1]}
		.created
			label created  #{new Date(activity.date_created).toLocaleDateString()}
		.text
			span(title="#{content[2]}") #{content[2].substr(0,15)}...	
