each activity in activities
	.row
		.span2
			- var array = activity.content
			- var content = array.split(";")
			a( href="#{content[0]}",name="activities" ) #{content[0]}
		if (activity.type == 1)
			.span2
				span #{content[1]} Stars
		else
			.span2
				span #{content[1]} 
		.span2
			span #{new Date(activity.date_created).toLocaleDateString()}
		.span2
			span #{activity.user_name}
		if (activity.type == 0)
			.span1
				span Recommendations
		else
			.span1
				span Rating

