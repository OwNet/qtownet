- var array = activity.content
- var content = array.split(";")
.message(data-type="rating", data-id=activity.object_id)
	if (activity.gender == "Female")
		.image
			img( src="img/girl.png" )
	else
		.image
			img( src="img/boy.png" )
	if (user.id == activity.user_id)
		.delete
			img.icon( src="img/no.png", name="delete-activity", title="Delete")

	.name
		label.orange
			a( href="#/otherprofile",data-id="#{activity.user_id}",name="showOtherUser" ) #{activity.user_name}

	label Rated site:&nbsp;
		a( href="http://#{content[0]}", target="_blank") #{content[1]}

	.rating.text
		ul.star_rating
			- for (var star=1; star<=5; star++)
				if (star <= content[2])
					li.full
						div.star
				else
					li
						div.star

	.created
		label created #{new Date(activity.date_created).toLocaleString()}
